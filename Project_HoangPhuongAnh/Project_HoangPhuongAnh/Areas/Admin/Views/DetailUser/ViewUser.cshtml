            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header"><i class="fa fa fa-bars"></i> Hiển thị thông tin User chi tiết</h3>
                        <ol class="breadcrumb">
                            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                            <li><i class="fa fa-bars"></i>View User</li>
                            <li><i class="fa fa-square-o"></i>@userInfor._full_name</li>
                        </ol>
                    </div>
                </div>
                <!-- page start-->
                <div class="panel-body">
                    <div class="form-horizontal ">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">User ID</label>
                            <div class="col-lg-6">
                                <div class="form-control">@userInfor._user_id</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Email</label>
                            <div class="col-lg-6">
                                <div class="form-control">@userInfor._email</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Full name</label>
                            <div class="col-lg-6">
                                <div class="form-control">@userInfor._full_name</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Số điện thoại</label>
                            <div class="col-lg-6">
                                <div class="form-control">@userInfor._tel</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Birthday</label>
                            <div class="col-lg-6">
                                <div class="form-control">@userInfor._birthday.ToString("yyyy/MM/dd")</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Địa chỉ</label>
                            <div class="col-lg-6">
                                <div class="form-control">@userInfor._address_user</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Chức vụ</label>
                            <div class="col-lg-6">
                                @if (userInfor._role == 0)
                                {
                                    <div class="form-control">Admin</div>
                                }
                                else if (userInfor._role == 1)
                                {
                                    <div class="form-control">Khách hàng</div>
                                }
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <a class="btn btn-success" href="@Url.Action("Index", "Home")">Success</a>
                        </div>
                    </div>
                    

