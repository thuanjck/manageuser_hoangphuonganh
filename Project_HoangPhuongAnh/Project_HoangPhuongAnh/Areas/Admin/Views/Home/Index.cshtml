                        <ol class="breadcrumb">
                            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                            <li><i class="fa fa-bars"></i>Pages</li>
                            <li><i class="fa fa-square-o"></i>Pages</li>
                        </ol>
                    </div>
                </div>
                <!-- page start-->
                <div class="row">
                    <div class="col-lg-12">
                        <form action="@Url.Action("Index", "Home")" method="get" name="mainform">
                            <input type="hidden" value="search" name="action" />
                            <section class="panel">
                                <header class="panel-heading">
                                    Tìm kiếm thông tin
                                </header>
                                <div class="panel-body">
                                    <form class="form-inline" role="form">
                                        <div class="col-md-2">
                                            <input type="text" class="form-control round-input" placeholder="full name" value="@full_name" name="full_name">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Search</button>
                                    </form>
                                </div>
                            </section>
                        </form>
                        <section>
                            <header class="panel-heading">
                                Hiển thị thông tin khách hàng
                            </header>
                            @if (ViewBag._userInfor != null && ViewBag._userInfor.Count != 0)
                            {
                                <table class="table table-striped table-advance table-hover">
                                    <tbody>
                                        <tr>
                                            <th><i class="icon_profile"></i> ID</th>
                                            <th><i class="icon_mail_alt"></i> Email</th>
                                            <th>
                                                <i class="icon_profile"></i> Full Name
                                                @if (@ViewBag.sortByFullName == "ASC")
                                                {
                                                    <a href="Home?action=sort&sortType=full_name&sortAttribute=@ViewBag.sortByFullName"> ▲▽</a>
                                                }
                                                else if (@ViewBag.sortByFullName == "DESC")
                                                {
                                                    <a href="Home?action=sort&sortType=full_name&sortAttribute=@ViewBag.sortByFullName"> △▼</a>
                                                }
                                            </th>
                                            <th><i class="icon_mobile"></i> Mobile</th>
                                            <th><i class="icon_calendar"></i> Date</th>
                                            <th><i class="icon_pin_alt"></i> City</th>
                                            <th><i class="icon_cogs"></i> Action</th>
                                        </tr>

                                        @foreach (var _user in ViewBag._userInfor as List<Tbl_user>)
                                        {
                                            <tr>
                                                <td>@_user._user_id</td>
                                                <td>@_user._email</td>
                                                <td>@_user._full_name</td>
                                                <td>@_user._tel</td>
                                                <td>@_user._birthday.ToString("yyyy/MM/dd")</td>
                                                <td>@_user._address_user</td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a class="btn btn-primary" href="#"><i class="icon_plus_alt2"></i></a>
                                                        <a class="btn btn-success" href="#"><i class="icon_check_alt2"></i></a>
                                                        <a class="btn btn-danger" href="#"><i class="icon_close_alt2"></i></a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <header style="text-align:center">
                                    @ViewBag.noRecordMessage
                                </header>
                            }
                        </section>
                    </div>
                </div>
                <div class="text-center">
                    <ul class="pagination">
                        @if (ViewBag.listPaging != null && ViewBag.listPaging.Count != 0)
                        {
                            if (ViewBag.listPaging[0] > ViewBag.limitPage)
                            {
                                var page = ViewBag.listPaging[0] - ViewBag.limitPage;
                                <li><a href="Home?action=paging&currentPage=@page">&lt;&lt;</a></li>
                            }
                            foreach (var item in ViewBag.listPaging)
                            {
                                if (ViewBag.currentPage != item)
                                {
                                    <li><a href="Home?action=paging&currentPage=@item">@item</a></li>
                                }
                                if (ViewBag.currentPage == item)
                                {
                                    <li><a>@item</a></li>
                                }
                            }
                            if (ViewBag.listPaging[0] + ViewBag.limitPage - 1 < ViewBag.totalPage)
                            {
                                var page = ViewBag.listPaging[0] + ViewBag.limitPage;
                                <li><a href="Home?action=paging&currentPage=@page">&gt;&gt;</a></li>
                            }
                        }
                    </ul>
                </div>
